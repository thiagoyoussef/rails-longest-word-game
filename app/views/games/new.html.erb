<h1>New Game</h1>
<div class="row">
  <% @letters.each do |letter| %>
    <p class="letter-box mx-3"><%= letter %></p>
  <% end %>
</div>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'letters', @letters %>
  <div class="form-group">
    <label>What is the longest word you can find?</label>
    <input type="text" class="form-control" name="game_answer" />
  </div>
  <input type="submit" class="btn btn-dark btn-lg btn-block" value="Play!"/>
</form>
